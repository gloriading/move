
<div class="container">
  <%= simple_form_for @share do |f| %>
    <%= f.input :content, as: :ckeditor,
                required: false, label: false,
                input_html: {rows: 8, class: 'share-content'} %>
    <%= f.input :image,label: 'Upload Image',
                label_html: { class: 'image-upload' } %>
    <%= f.button :submit, "Update this Post",
                  class:"btn btn-dark btn-sm btn-block btn-share" %>
  <% end %>
</div>
