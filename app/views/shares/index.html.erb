<div class="container">
  <h4>Your Share</h4>

    <% @shares.each do |s| %>
      <div class="card mb-1" style="width: 60rem;">
        <div class="card-body row">
          <div class="col-sm-3">
            <% if s.image.present? %>
                <%= image_tag s.image, style: "width:30%;"%>
            <% end %>
          </div>
          <div class="col-sm-9">
            <p class="card-text"><%= s.content %></p>
              <p class="mb-0"><small><strong>Created at: </strong>
                <%= time_ago_in_words(s.created_at) %> ago
              </small></p>
              <p class="my-0"><small><strong>Update at: </strong>
                <%= time_ago_in_words(s.updated_at) %> ago
              </small></p>
          </div>

        </div>
        <% if can?(:crud, s) %>
          <div class="ml-auto mr-2">
            <%= link_to "edit", edit_share_path(s) %>
            <%= link_to "delete", share_path(s),
            method: :delete, data: {confirm: 'Are you sure?'} %>
          </div>
        <% end %>

      </div>

    <% end %>

</div>
