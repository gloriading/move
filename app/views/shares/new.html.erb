<div class="container my-3">
  <div class="splitL left">
    <div class="ml-2 share-panel">
        <%= link_to user_path(current_user) do %>
          <i class="fas fa-user"></i> Your Calendar
        <% end %>
        <%= link_to public_shares_path do%>
          <i class="fas fa-clipboard"></i> Public Posts
        <% end %>
        <%= link_to shares_path do %>
          <i class="fas fa-paste"></i> Your Posts
        <% end %>
    </div>
  </div>
  <div class="splitR right">
    <%= render 'form' %>
  </div>
</div>
