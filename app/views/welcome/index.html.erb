
  <div class="container-fluid home">

    <% if user_signed_in? %>
    <div id="signInMessageBox">
      <h1 id="demo"></h1>
      <%= link_to 'your calendar', user_path(current_user), class: 'btn btn-light' %>
    </div>

    <% else %>
    <div class="home-display">
      <div class="welcome-animation">
        <h1 class="display-2 ml-3 my-0">move</h1>
      </div>
      <div class="autologin ml-auto mr-auto text-center">
        <p>Thank you for visiting <strong>move</strong>. </p>

        <%= form_for :session, url: session_path do |f| %>
            <%= f.hidden_field :email, value: 'healthymove@gmail.com' %>
            <%= f.hidden_field :password, value: 'move' %>
            <%= f.submit 'Login as a Guest', class: 'btn btn-light guest'%>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

<script>
  window.onload = function() { typeWriter(); }

  let i = 0;
  const txt = 'Did you do workouts today?';
  let speed = 50 + Math.ceil(Math.random()*100);

  function typeWriter() {
    if (i < txt.length && document.getElementById("demo")) {
        document.getElementById("demo").innerHTML += txt.charAt(i);
        i++;
        setTimeout(typeWriter, speed);
      }
    }
</script>
