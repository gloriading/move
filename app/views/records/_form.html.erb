<%= simple_form_for @record do |f| %>
  <%= f.input :start_time %>
  <%= f.input :duration %>
  <%= f.input :note %>

  <div id="options">
    <%= f.simple_fields_for :exercises do |opt| %>
      <%= render 'exercise_fields', f: opt %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add exercise', f, :exercises  %>
    </div>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
