<div class="container mt-3">

  <div class="card" style="width:70%;">
    <div class="card-body">
      <p>Hey! <%= @record.user&.full_name || "[deleted]" %>!</p>
      <h5>When:
        <%= @record.start_time.to_formatted_s(:long) %>
      </h5>
      <% if @record.exercises != [] %>
          <p>What:
            <% @record.exercises.each do |exercise| %>
            <span style="background-color:<%= exercise.colour %>;">[ <%= exercise.name %> ]</span>
            <% end %>
          </p>
      <% end %>

      <% if @record.duration.present? %>
        <p>Duration: <%= @record.duration%> minutes.</p>
      <% end %>

      <% if @record.note.present? %>
        <p>Your note: "<%= @record.note%>"</p>
      <% end %>

      <small><strong>Created at: </strong>
        <%= time_ago_in_words(@record.created_at) %> ago
      </small>

      <small><strong>Update at: </strong>
        <%= time_ago_in_words(@record.updated_at) %> ago
      </small>

      <% if can?(:crud, @record) %>
          <p>
            <%= link_to "edit", edit_record_path(@record) %>
            <%= link_to(
                 'delete',
                 record_path(@record),
                 method: :delete,
                 data: {confirm: 'Are you sure?'}
               )
            %>
          </p>
      <% end %>
    </div>
  </div>



</div>
