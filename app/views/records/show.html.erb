<div class="container mt-3">

  <div class="card record-card">
    <div class="card-body">

      <h5>on
        <%= @record.start_time.strftime("%A, %b %e, %l:%M %p, %Y") %>
      </h5>
      <% if @record.exercises != [] %>
          <p>
            <% @record.exercises.each do |exercise| %>
            <p
              style="font-size: 50px;
                    margin: 0;
                    color:<%= exercise.colour %>;">
              <strong><%= exercise.name %></strong>
            </p>
            <small style="color:#7F8C8D;"><strong>Created at: </strong>
              <%= time_ago_in_words(exercise.created_at) %> ago
            </small>
            <small style="color:#7F8C8D;"><strong>Update at: </strong>
              <%= time_ago_in_words(exercise.updated_at) %> ago
            </small>
            <% end %>
          </p>
      <% end %>


      <% if @record.note.present? %>
        <div style="border: 1px solid gray; padding: 5px;" class="mb-3">
          <p><i class="far fa-sticky-note"></i> <%= @record.note%></p>
        </div>
      <% end %>


      <% if can?(:crud, @record) %>
          <p class="float-right">
            <%= link_to "back",
                user_path(@record.user),
                class:"btn btn-light btn-sm"
            %>
            <%= link_to "edit",
                edit_record_path(@record),
                class:"btn btn-light btn-sm"
            %>
            <%= link_to(
                 'delete',
                 record_path(@record),
                 method: :delete,
                 data: {confirm: 'Are you sure?'},
                 class:"btn btn-light btn-sm"
               )
            %>
          </p>
      <% end %>
    </div>
  </div>



</div>
