<div class="container mt-3">
  <p>Hello, <%= @record.user&.full_name || "[deleted]" %>!</p>
  <h4>You did this exercise on <%= @record.date %>. </h4>

  <% if @record.exercises != [] %>
      <p>Exercises you did:
        <% @record.exercises.each do |exercise| %>
        <span style="background-color:<%= exercise.colour.name %> ">
          .......
        </span>
        [ <%= exercise.name %> ]
        <% end %>
      </p>
  <% end %>


  <p>You had done this for <%= @record.duration%> minutes.</p>

  <p>Your note: "<%= @record.note%>"</p>

  <small><strong>Created at: </strong>
    <%= time_ago_in_words(@record.created_at) %> ago
  </small>

  <small><strong>Update at: </strong>
    <%= time_ago_in_words(@record.updated_at) %> ago
  </small>

  <p>
    <%= link_to "edit", edit_record_path(@record) %>
    <%= link_to(
         'delete',
         record_path(@record),
         method: :delete,
         data: {confirm: 'Are you sure?'}
       )
    %>
  </p>

</div>
