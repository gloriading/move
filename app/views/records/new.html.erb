<div class="container my-3">


    <%= render 'form' %>


  <%#= @user_pair_string %>
<br />


<script type="text/javascript">
    const allPairs = <%= raw @user_pair_string || {} %>;
    console.log(allPairs);
    let exercise;

    $('.exe').on('change', function(){
      temp = $(this).val().toLowerCase();
      exercise = temp[0].toUpperCase()+ temp.slice(1);

      for (let p in allPairs){
        if(p == exercise){
          console.log("match!");
          const mini = $(this).parents('.nested-fields').find('#mini');
          console.log(mini);
          mini.val(allPairs[p]);
        }
      }
    })



</script>
</div>
